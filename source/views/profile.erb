<div class="profile-container">   
    <div class="profile-items">
        <h1>Profile Page</h1>

        <!-- Password Change Section -->
        <h2>Change Password</h2>
        <form action="/change-password" method="POST">
            <div class="form-group">
                <label class="profile-label" for="current-password">Current Password:</label>
                <input class="profile" type="password" id="current-password" name="current_password" required>
            </div>
            <div class="form-group">
                <label class="profile-label" for="new-password">New Password:</label>
                <input class="profile" type="password" id="new-password" name="new_password" required>
            </div>
            <div class="form-group">
                <label class="profile-label" for="confirm-password">Confirm New Password:</label>
                <input class="profile" type="password" id="confirm-password" name="confirm_password" required>
            </div>
            <button class="profile-button"type="submit">Change Password</button>
        </form>

        <h2>Game Scoreboard</h2>
        <ul id="scoreboard">
            <% if @people_rated.empty? %>
                <li>No scores yet.</li>
            <% else %>
                <% @people_rated.each do |person| %>
                    <li><%= person["name"] %> - <strong>Rating:</strong> <%= person["avg_rating"] %></li>
                <% end %>
            <% end %>
        </ul>
    </div>
</div>